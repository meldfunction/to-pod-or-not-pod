<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}{{ site.title }}</title>
  <meta name="description" content="{{ description or site.description }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or site.title }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">

  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="{{ site.feedUrl }}">

  <!-- Favicon -->
  <link rel="icon" href="{{ '/assets/images/favicon.ico' | url }}" sizes="any">

  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <header class="site-header">
    <div class="container">
      <a href="{{ '/' | url }}" class="site-logo">
        <span class="logo-text">Things Overheard</span>
        <span class="logo-subtext">at the Coffee Bar</span>
      </a>
      <nav class="site-nav" aria-label="Main navigation">
        <ul>
          <li><a href="{{ '/' | url }}" {% if page.url == "/" %}aria-current="page"{% endif %}>Episodes</a></li>
          <li><a href="{{ '/about/' | url }}" {% if page.url == "/about/" %}aria-current="page"{% endif %}>About</a></li>
          <li><a href="{{ '/feed.xml' | url }}" class="rss-link" aria-label="RSS Feed">RSS</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main id="main-content">
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>&copy; {{ site.copyright }}</p>
      <p class="subscribe-links">
        Subscribe: <a href="{{ site.feedUrl }}">RSS</a>
      </p>
    </div>
  </footer>

  <!-- PDF Preview Modal -->
  <div class="pdf-modal" id="pdfModal" hidden>
    <div class="pdf-modal-backdrop"></div>
    <div class="pdf-modal-content">
      <button class="pdf-modal-close" aria-label="Close preview">&times;</button>
      <iframe class="pdf-viewer" id="pdfViewer" title="PDF Preview"></iframe>
    </div>
  </div>

  <script src="{{ '/assets/js/audio-player.js' | url }}"></script>
  <script src="{{ '/assets/js/pdf-preview.js' | url }}"></script>
</body>
</html>
